<div class="list-wrap">
    <% @lists.each do |list| %>
    <div class="list-box">
        <% if list.image.attached? %>
            <%= image_tag list.image, size:"300×300" %>
        <% else %>
            <%= image_tag 'no_image', size: "300×300" %>
        <% end %>
        <div class="list-comment">
            <span class="list-body"><%= list.body %></span>
            <span class="list-title"><%= link_to list.title, list_path(list.id) %></span>
        </div>
    </div>
    <% end %>
</div>

<%= link_to "戻る", '/lists/new' %>

